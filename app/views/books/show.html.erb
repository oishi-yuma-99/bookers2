<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<div class="row">
  <div class="col-md-3">
    <%= render 'users/sidebar', book: @book, user: @user %>
  </div>
  <div class="col-md-8 offset-md-1">
    <p><h2>Book detail</h2></p>
    <table class="table">
      <% if @book_show.user == current_user %>
        <tr>
          <td>
            <%= link_to image_tag(@book_show.user.get_profile_image, height: 100, width: 'auto'), user_path(@book_show.user.id) %>
            <p><%= link_to @user.name, user_path(@user.id) %></p>
          </td>
          <td><%= link_to @book_show.title, book_path(@book_show.id) %></td>
          <td><%= @book_show.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book_show.id) %></td>
          <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      <% else %>
        <tr>
          <td>
            <%= link_to image_tag(@book_show.user.get_profile_image, height: 100, width: 'auto'), user_path(@book_show.user.id) %>
            <p><%= link_to @user.name, user_path(@user.id) %></p>
          </td>
          <td><%= link_to @book_show.title, book_path(@book_show.id) %></td>
          <td><%= @book_show.body %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>