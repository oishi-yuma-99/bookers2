<% if @user.errors.any? %>
  <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="row">
  <div class="col-5 px-5 px-sm-0 mx-auto">
    <h2 class="mb-2">User info</h2>
    <%= form_with model: @user do |f| %>
    <p>Name</p>
    <%= f.text_field :name, class: 'form-control mb-3' %>
    <p>Image</p>
    <%= f.file_field :profile_image, accept: "image/*", class: 'mb-3' %>
    <p>Introduction</p>
    <%= f.text_area :introduction, class: 'form-control-file mb-3' %>
    <p><%= f.submit 'Update User', class: 'btn btn-secondary' %></p>
    <% end %>
  </div>
</div>