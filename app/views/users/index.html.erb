<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<div class="row">
  <div class="col-md-3">
    <%= render 'users/sidebar', book: @book, user: @user %>
  </div>
  <div class="col-md-8 offset-md-1">
    <p><h2>Users</h2></p>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">image</th>
          <th scope="col">name</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag(user.get_profile_image, height: 80, width: 'auto') %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>